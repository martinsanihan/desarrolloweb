<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Todo en Repuestos - AutoReps</title>
  <link href="/files/style.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
</head>

<body>
<a href="/login">
  <img id="image_prueba" src="https://irp-cdn.multiscreensite.com/cd954da7/MOBILE/jpg/494090-angeloni-repuestos-de-pedro-angeloni-banner-2fb61.jpg?1447292871596&v=7.3.45002"/>
</a>

<div class="catalogo">
{{#each lista}}
    <div class="producto">
      <a href="/products/{{this.id}}"><img src="{{this.image}}" width="150px"/></a>
      <h5>{{this.name}}</h5>
      <h4>${{this.price}}</h4>
      <form class="agregar-carrito-form" action="/cart/agregar" method="POST">
      <input type="hidden" name="product_id" value={{this.id}}>
      <label for="cantidad">Cantidad:</label>
      <input type="number" id="quantity" name="quantity" value="1" min="1">
      <button type="submit" class="botones">AÃ±adir al carrito</button>
      </form>
    </div>
{{/each}}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>