<div class="catalogo">
{{#each results}}
    <div class="producto">
      <a href="/products/{{this.id}}"><img src="{{this.image}}" width="150px"/></a>
      <h5>{{this.name}}</h5>
      <h4>${{this.price}}</h4>
      <form class="agregar-carrito-form" action="/cart/agregar" method="POST">
      <input type="hidden" name="product_id" value={{this.id}}>
      <label for="cantidad">Cantidad:</label>
      <input type="number" id="quantity" name="quantity" value="1" min="1">
      <button type="submit" class="botones">AÃ±adir al carrito</button>
      </form>
    </div>
{{/each}}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>