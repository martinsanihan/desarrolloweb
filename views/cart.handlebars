<h1><strong> Tu Carrito</strong></h1>
<ul>
  {{#each cart}}
    <li>
     <strong>{{this.name}}</strong> - Cantidad: {{this.quantity}} - Valor: ${{this.price}} <img src="{{this.image}}" width=50px>
      <form action="/cart/eliminar" method="POST">
        <input type="hidden" name="product_id" value={{this.id}}>
        <button type="submit">Eliminar</button>
      </form>
    </li>
  {{/each}}
</ul>

<form action="/cart/vaciar" method="POST">
  <p>Total a pagar: <strong>${{this.total}}</strong></p>
  <input type="hidden" name="pagototal" value={{this.total}}>
  <button type="submit">Proceder al pago</button>
</form>
<hr>
<a href="/">Ir al home</a>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>